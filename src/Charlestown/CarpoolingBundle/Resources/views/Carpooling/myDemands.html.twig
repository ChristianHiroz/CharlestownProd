{% extends 'CharlestownCollaboratorBundle::layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding-bottom: 0px;">
                <nav class="navbar navbar-default secondNav">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav" style="width:100%;">
                                <li class="" role="presentation"><a href="{{ path('carpooling') }}">Covoiturages proposés</a></li>
                                <li class="divider-vertical-second"></li>
                                <li class="active" role="presentation"><a href="{{ path('mycarpoolings_demand') }}">Je suis passager</a></li>
                                <li class="divider-vertical-second"></li>

                                <li class="divider-vertical-second" style="float:right;"></li>
                                <li class="" style="float:right;" role="presentation"><a href="{{ path('mycarpoolings') }}">Je suis conducteur</a></li>
                                <li class="divider-vertical-second"style="float:right;"> </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <hr/>
            </div>
            <div class="modal-body" style="padding-top: 0px; color:black;">
                {% for carpool in selections %}
                    <div class="row" style="margin:15px; background-color: white; border-radius: 8px; height:50px;">
                        <div class="col-md-8" style="height:100%;">
                            <p style="height:100%; line-height: 50px;">{{ carpool.startPlace }} <span class="glyphicon glyphicon-menu-right"></span> {{ carpool.endPlace }} le {{ carpool.dateTravel | localizeddate('full', 'none') }} || Places : {{ carpool.room }} || Téléphone : {{ carpool.driver.phoneNumber }} </p>
                        </div>
                        <div class="col-md-4" style="padding:0px; text-align: center; line-height: 50px;">
                            <a class="btn btn-danger" href="{{ path('unselect_carpooling', {'id':carpool.id, 'user': user.id}) }}">Retirer</a>
                        </div>
                    </div>
                {% endfor %}

                {% for carpool in applications %}
                    <div class="row" style="margin:15px; background-color: white; border-radius: 8px; height:50px;">
                        <div class="col-md-8" style="height:100%;">
                            <p style="height:100%; line-height: 50px;">{{ carpool.startPlace }} <span class="glyphicon glyphicon-menu-right"></span> {{ carpool.endPlace }} le {{ carpool.dateTravel | localizeddate('full', 'none') }} || Places : {{ carpool.room }} </p>
                        </div>
                        <div class="col-md-4" style="padding:0px; text-align: center; line-height: 50px;">
                            <a class="btn btn-success" href="{{ path('unapply_carpooling', {'id':carpool.id, 'user':user.id}) }}">Retirer</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
{% endblock %}
