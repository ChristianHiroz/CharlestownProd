{% extends 'CharlestownCollaboratorBundle::layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding-bottom: 0px;">
                <nav class="navbar navbar-default secondNav">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav" style="width:100%;">
                                <li class="" role="presentation"><a href="{{ path('carpooling') }}">Covoiturages</a></li>
                                <li class="divider-vertical-second"></li>
                                <li class="" role="presentation"><a href="{{ path('mycarpoolings_demand') }}">Mes voyages</a></li>
                                <li class="divider-vertical-second"></li>

                                <li class="divider-vertical-second" style="float:right;"></li>
                                <li class="active" style="float:right;" role="presentation"><a href="{{ path('mycarpoolings') }}">Mes covoiturages</a></li>
                                <li class="divider-vertical-second"style="float:right;"> </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <hr/>
            </div>
            <div class="modal-body" style="padding-top: 0px; color:black;">

                <div class="row" style="margin:15px; height:30px;padding-bottom: 50px; text-align:center;">
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <a style="color:white;font-size: 22px; line-height: 30px;" class="btn btn-danger" href="{{ path('covoiturage_new') }}">Nouveau</a>
                    </div>
                    <div class="col-md-5"></div>
                </div>
                {% for carpool in carpoolings%}
                    <div class="row" style="margin:15px; background-color: white; border-radius: 8px; height:50px;">
                        <div class="col-md-8" style="height:100%;">
                            <p style="height:100%; line-height: 50px;">{{ carpool.startPlace }} <span class="glyphicon glyphicon-menu-right"></span> {{ carpool.endPlace }} le {{ carpool.dateTravel | localizeddate('full', 'none') }} || Places : {{ carpool.room }} </p>
                        </div>
                        <div class="col-md-4" style="padding:0px; text-align: center; line-height: 50px;">
                            <a class="btn btn-success" href="{{ path('covoiturage_edit', {'id':carpool.id}) }}">Modifier</a>
                        </div>
                    </div>
                    {% for applicant in carpool.applicants %}
                        <div class="row" style="background-color: white; border-radius: 8px; height:50px; width:40%; float:right;">
                            <div class="col-md-8" style="height:100%;">
                                <p style="height:100%; line-height: 50px;">{{ applicant.firstName }} {{ applicant.lastName }} {{ applicant.phoneNumber }}</p>
                            </div>
                            <div class="col-md-2" style="padding:0px; text-align: center; line-height: 50px;">
                                <a class="btn btn-success" href="{{ path('select_carpooling', {'id':carpool.id, 'user': applicant.id}) }}">Accepter</a>
                            </div>
                            <div class="col-md-2" style="padding:0px; text-align: center; line-height: 50px;">
                                <a class="btn btn-danger" href="{{ path('unapply_carpooling', {'id':carpool.id, 'user': applicant.id}) }}">Refuser</a>
                            </div>
                        </div>
                    {% endfor %}
                    {% for selected in carpool.selected %}
                        <div class="row" style="background-color: white; border-radius: 8px; height:50px; width:40%; float:right;">
                            <div class="col-md-8" style="height:100%; ">
                                <p style="height:100%; line-height: 50px;">{{ selected.firstName }} {{ selected.lastName }} {{ selected.phoneNumber }}</p>
                            </div>
                            <div class="col-md-4" style="padding:0px; text-align: center; line-height: 50px;">
                                <a class="btn btn-danger" href="{{ path('unselect_carpooling', {'id':carpool.id, 'user': selected.id}) }}">Retirer</a>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
{% endblock %}
