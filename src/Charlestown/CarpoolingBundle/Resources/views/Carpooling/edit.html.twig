{% extends 'CharlestownCollaboratorBundle::layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="container" style="width:80%; margin-left:20%; max-width:80%;">
        <div class="row">
            <div class="col-md-12">
                <h2 class="bigTitle" style="text-align: right;">MON COURS</h2>
                <hr>
                {{ form(delete_form) }}
                <div class="form">
                    {{ form_start(edit_form)}}
                    {{ form_widget(edit_form.startPlace, {'attr' : {'class' : 'champ', 'placeholder' : 'Lieu de départ... ex: 5 rue Fondary 75015 Paris'}}) }}
                    {{ form_widget(edit_form.endPlace, {'attr' : {'class' : 'champ', 'placeholder' : 'Lieu d\'arivée'}}) }}
                    {{ form_label(edit_form.room) }}
                    {{ form_widget(edit_form.room, {'attr' : {'class' : 'champ', 'placeholder' : 'Places'}}) }}
                    {{ form_label(edit_form.dateTravel) }}
                    {{ form_widget(edit_form.dateTravel, {'attr' : {'class' : 'champ', 'placeholder' : 'Heure de départ'}}) }}
                    <div>
                        <input class="bouton" style="margin-bottom:150px;" type="submit" value="Envoyer" />
                    </div>
                    {{ form_end(edit_form) }}

                </div>
            </div>
        </div>

    </div>
{% endblock %}