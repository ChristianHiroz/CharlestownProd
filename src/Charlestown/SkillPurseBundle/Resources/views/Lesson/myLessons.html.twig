{% extends 'CharlestownCollaboratorBundle::layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding-bottom: 0px;">
                <nav class="navbar navbar-default secondNav">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav" style="width:100%;">
                                <li class="" role="presentation"><a href="{{ path('lesson') }}">Cours proposés</a></li>
                                <li class="divider-vertical-second"></li>
                                <li class="" role="presentation"><a href="{{ path('mylesson_applications') }}">Je suis élève</a></li>
                                <li class="divider-vertical-second"></li>
                                <li class="active" role="presentation"><a href="{{ path('mylessons') }}">Je suis prof</a></li>
                                <li class="divider-vertical-second"></li>
                                <li class="divider-vertical-second" style="float:right;"></li>
                                <li class="dropdown" style="float:right;">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Nouveau<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li class="" role="presentation"><a href="{{ path('lesson_new') }}">Cours</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li class="" role="presentation"><a href="{{ path('skill_new') }}">Compétence</a></li>
                                    </ul>
                                </li>
                                <li class="divider-vertical-second" style="float:right;"></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <hr/>
            </div>
            <div class="modal-body" style="padding-top: 0px; color:black;">
                {% for lesson in lessons %}
                    <div class="row" style="margin:15px; background-color: white; border-radius: 8px; height:50px;">
                        <div class="col-md-8" style="height:100%;">
                            <p style="height:100%; line-height: 50px;">{{ lesson.localisation }} au {{ lesson.address }}, {{ lesson.town }} {{ lesson.pc }} <span class="glyphicon glyphicon-menu-right"></span> de {{ lesson.startAt | localizeddate('full', 'none') }} à {{ lesson.endAt | localizeddate('full', 'none') }} || Places : {{ lesson.room }} || {% for skill in lesson.skills %} {{ skill.name }} {{ skill.level }} {% endfor %} </p>
                        </div>
                        <div class="col-md-4" style="padding:0px; text-align: center; line-height: 50px;">
                            <a class="btn btn-success" href="{{ path('lesson_edit', {'id' : lesson.id, 'user' : user.id}) }}">Modifier</a>
                        </div>
                    </div>
                    {% for applicant in lesson.studentsApplicants %}
                        <div class="row" style="margin:15px; background-color: white; border-radius: 8px; height:50px;">
                            <div class="col-md-8" style="height:100%;">
                                <p style="height:100%; line-height: 50px;">{{ applicant.username }}</p>
                            </div>
                            <div class="col-md-2" style="padding:0px; text-align: center; line-height: 50px;">
                                <a class="btn btn-success" href="{{ path('select_lesson', {'id':lesson.id, 'user': applicant.id}) }}">Accepter</a>
                            </div>
                            <div class="col-md-2" style="padding:0px; text-align: center; line-height: 50px;">
                                <a class="btn btn-danger" href="{{ path('unapply_lesson', {'id':lesson.id, 'user': applicant.id}) }}">Refuser</a>
                            </div>
                        </div>
                    {% endfor %}
                    {% for selected in lesson.students %}
                        <div class="row" style="margin:15px; background-color: white; border-radius: 8px; height:50px;">
                            <div class="col-md-8" style="height:100%;">
                                <p style="height:100%; line-height: 50px;">{{ selected.username }}</p>
                            </div>
                            <div class="col-md-4" style="padding:0px; text-align: center; line-height: 50px;">
                                <a class="btn btn-danger" href="{{ path('unselect_lesson', {'id':lesson.id, 'user': selected.id}) }}">Retirer</a>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
{% endblock %}
