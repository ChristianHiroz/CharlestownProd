                e.preventDefault();
                $("#chat_container").addClass("hidden");
                $("#chat_open").removeClass("hidden");
            }); //close the chatroom

            $("#message").keypress(function(e) {
                if(e.which == '13'){
                    var messageIdReceived = $(".message_box_received").last().attr('id');
                    var messageIdSend = $(".message_box_send").last().attr('id');
                    var messageId = 0;
                    if(messageIdReceived > messageIdSend){
                        messageId = messageIdReceived;
                    }
                    else{
                        messageId = messageIdSend;
                    }
                    messageId = parseInt(messageId) + 1;
                    var message = $("#message").val();
                    $("#message").val("");
                    $.ajax({
                        url: Routing.generate('message_create'),
                        type: 'POST',
                        data: 'message='+message,
                        success: function (data) {
