                var messageId = 0;
                if(messageIdReceived > messageIdSend){
                    messageId = messageIdReceived;
                }
                else{
                    messageId = messageIdSend;
                }
                $.ajax({
                    url: Routing.generate('message_reload', {'id' : messageId}),
                    type: 'GET',
