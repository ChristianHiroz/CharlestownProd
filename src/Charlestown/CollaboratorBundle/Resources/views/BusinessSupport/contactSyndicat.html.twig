{% extends 'CharlestownCollaboratorBundle::layout.html.twig'%}

{% block content %}
    {{ parent() }}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Coordonnées</h2>
        </div>
        <div class="modal-body">
                {% for syndicat in irp %}
                    <h2 style="text-align: center;">
                        {{ syndicat.name }}
                    </h2>
                    <table class="table table-condensed">
                        <thead>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Agence</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        </thead>
                        <tbody>
                    {% for user in syndicat.users %}
                        <tr>
                            {% if user.lastName %}
                                <td>{{ user.lastName }}</td>
                            {% else %}
                                <td>Non renseigné, contactez Charlestown</td>
                            {% endif %}
                            {% if user.firstName %}
                                <td>{{ user.firstName }}</td>
                            {% else %}
                                <td>Non renseigné, contactez Charlestown</td>
                            {% endif %}
                            {% if user.agency.localisation %}
                                <td>{{ user.agency.localisation }}</td>
                            {% else %}
                                <td>Non renseigné, contactez Charlestown</td>
                            {% endif %}
                            {% if user.email %}
                                <td>{{ user.email }}</td>
                            {% else %}
                                <td>Non renseigné, contactez Charlestown</td>
                            {% endif %}
                            {% if user.phoneNumber %}
                                <td>{{ user.phoneNumber }}</td>
                            {% else %}
                                <td>Non renseigné, contactez Charlestown</td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                        </tbody>
                    </table>
                {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
