{% extends 'CharlestownCollaboratorBundle::layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding-bottom: 0px;">
                <nav class="navbar navbar-default secondNav">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav" style="width:100%;">
                                <li class="active" role="presentation"><a href="{{ path('operation') }}">Op√©rations</a></li>
                                <li class="divider-vertical-second"></li>
                                <li class="" role="presentation"><a href="{{ path('my_operation_applications') }}">Mes candidatures</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <hr/>
            </div>
            <div class="modal-body" style="padding-top: 0px; color:black;">
                {% for operation in operations %}
                    <div class="row" style="margin:15px; background-color: white; border-radius: 8px; height:50px;">
                        <div class="col-md-8" style="height:100%;">
                                    <a style="line-height: 50px;" href="{{ path('operation_show', {'id':operation.id}) }}">{{ operation.dateStart | localizeddate('full', 'none') }} - {{ operation.localisation }} - {{ operation.customer.companyName }} </a>
                        </div>
                        <div class="col-md-4" style="padding:0px; text-align: center; line-height: 50px;">
                            <a class="btn btn-success" href="{{ path('operation_apply', {'id':operation.id}) }}">Postuler</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
{% endblock %}
