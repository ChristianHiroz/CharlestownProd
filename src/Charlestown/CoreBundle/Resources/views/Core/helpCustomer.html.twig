    <style type="text/css">
        .mymenu li{
            display: inline-block;margin: 10px;color: #000;background: #fff;background: rgba(255,255,255, 0.5);-webkit-border-radius: 10px;border-radius: 10px;"
        }
        li.active{
            background: #666;!important;
            background: rgba(0,0,0, 0.5);!important;
            color: #fff;!important;
        }
        li.active a {
            color:white;!important;
        }
