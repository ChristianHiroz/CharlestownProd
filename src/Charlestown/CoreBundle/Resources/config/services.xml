<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="charlestown.mailer.class">Charlestown\CoreBundle\Services\Mailer</parameter>
        <parameter key="test.template">CharlestownCoreBundle:Mail:test.txt.twig</parameter>
    </parameters>
    <services>
        <service id="charlestown.mailer" class="%charlestown.mailer.class%">
            <argument type="service" id="mailer" />
            <argument type="service" id="router" />
            <argument type="service" id="templating" />
            <argument type="collection">
                <argument key="template" type="collection">
                    <argument key="test">%test.template%</argument>
                </argument>
                <argument key="from_email" type="collection">
                    <argument key="charlestown">christian.hiroz@gmail.com</argument>
                </argument>
            </argument>
        </service>
    </services>
</container>
