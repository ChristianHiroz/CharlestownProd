{% extends 'CharlestownCollaboratorBundle::layout.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding-bottom: 0px;">
                <nav class="navbar navbar-default secondNav">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav" style="width:100%;">
                                <li class="active" role="presentation"><a href="{{ path('fos_user_profile_show') }}">Profil</a></li>
                                <li class="divider-vertical-second"></li>
                                <li class="" role="presentation"><a href="{{ path('fos_user_profile_edit') }}">Editer</a></li>
                                <li class="divider-vertical-second"></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <hr/>
            </div>
            <div class="modal-body" style="padding-top: 0px;">
                <div class="row">
                        <div class="col-md-4" style="text-align:center;"><br/>
                            Nom d'utilisateur : {{ user.username }} <br/>
                            Email : {{ user.email }} <br/>
                            Téléphone : {{ user.phoneNumber }} <br/>
                            Agence : {{ user.agency.localisation }} <br/>
                        </div>
                        <div class="col-md-4" style="text-align:center;">
                            <img class="rounded-image" style="width:150px; height:150px; float:none; border-style: solid; border-color:white; border-width:2px;" src="{{ asset(user.picture.uploadRootDir  ~ user.picture.id ~ '.' ~ user.picture.alt) }}"/>
                        </div>
                        <div class="col-md-4" style="text-align:center;"><br/>
                            Nom : {{ user.lastName }} <br/>
                            Prénom : {{ user.firstName }} <br/>
                            Poste : {{ user.position }} <br/>
                            Adresse : {{ user.address }} {{ user.pc }} {{ user.town }} <br/>
                        </div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
{% endblock %}
