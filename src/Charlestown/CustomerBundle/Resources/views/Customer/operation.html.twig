{% extends 'CharlestownCustomerBundle::layout.html.twig'%}

{% block content %}
    {{ parent() }}
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <nav class="navbar navbar-default secondNav">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul id="myTabs" class="nav nav-tabs" role="tablist">
                                {% for operation in user.operations %}
                                    {% if loop.index == 1 %}
                                        <li role="presentation" class="active">
                                            <a href="#{{ operation.id }}" id="{{ operation.id }}-tab" role="tab" data-toggle="tab" aria-controls="{{ operation.id }}" aria-expanded="true">{{ operation.name }}</a>
                                        </li>
                                    {% else %}
                                        <li role="presentation">
                                            <a href="#{{ operation.id }}" id="{{ operation.id }}-tab" role="tab" data-toggle="tab" aria-controls="{{ operation.id }}" aria-expanded="true">{{ operation.name }}</a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                            {% for operation in user.operations %}
                                <div id="myTabContent" class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade active in" id="new" aria-labelledby="new-tab">
                                        <div class="container" style="margin-top: 25px; margin-bottom: 25px; width:100%;">
                                            {% for new in operation.files %}
                                                {% if new.accepted %}
                                                    {% if loop.index % 2 != 0 %}
                                                        <div class="row">
                                                            <div class="col-md-5">
                                                                <div class="textAlignCenter" style="font-size:20px;">
                                                                    {{ new.nameShow }}
                                                                </div><br/>
                                                                <img class="uniformResize" src="{{ asset(new.uploadRootDir  ~ new.id ~ '.' ~ new.alt) }}"/>
                                                            </div>
                                                            <div class="col-md-1"></div>
                                                    {% else %}
                                                            <div class="col-md-5">
                                                                <div class="textAlignCenter" style="font-size:20px;">
                                                                    {{ new.nameShow }}
                                                                </div><br/>
                                                                <img class="uniformResize" src="{{ asset(new.uploadRootDir  ~ new.id ~ '.' ~ new.alt) }}"/>
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </nav>
                <hr/>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
{% endblock %}
